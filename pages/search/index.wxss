page {
  background-color: #fff;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
  height: 90rpx;
  padding: 10rpx;
}
.search_row input {
  border: 5rpx solid #ff8700;
  border-radius: 15rpx;
  border-color: #ff8700;
  background-color: #fff;
  flex: 1;
  height: 100%;
  padding: 0 0 0 30rpx;
}
.search_row .btn {
  background-color: #ff8700;
  width: 110rpx;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}
.search_content {
  margin: 30rpx 0 0 0;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
